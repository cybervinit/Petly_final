<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.username.petly.PetManagementActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutId"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.shitest.alarmapp.MainActivity"
        tools:showIn="@layout/activity_main"
        android:background="#FFEDFFE6">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/cat_cat2"
            android:scaleType="centerCrop"
            android:id="@+id/imageView8"
            android:backgroundTint="#e0e0e0" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="SET ALARM TIME"
            android:id="@+id/button"
            android:background="#b1e29b"
            android:padding="0dp"
            android:layout_below="@+id/btnEditMsg"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ADD NEW ALARM"
            android:id="@+id/btnReset"
            android:layout_gravity="right"
            android:background="#e9b3b3"
            android:layout_below="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_margin="20dp"
            android:src="@drawable/ic_launcher"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="SET ALARM DATE"
            android:id="@+id/btnSetDate"
            android:background="#a4a6ff"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="CLEAR ALL ALARMS"
            android:id="@+id/btnClearAllAlarms"
            android:background="#b8f3ff"
            android:layout_below="@+id/btnSetDate"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="EDIT MESSAGE"
            android:id="@+id/btnEditMsg"
            android:background="#fff3b7"
            android:layout_below="@+id/btnReset"
            android:layout_alignRight="@+id/btnClearAllAlarms"
            android:layout_alignEnd="@+id/btnClearAllAlarms" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="NOTIFICATION CENTER"
            android:textSize="30sp"
            android:gravity="center"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>